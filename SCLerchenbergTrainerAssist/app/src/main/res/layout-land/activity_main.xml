<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.scltrainer.uni_mainz.sclerchenbergtrainerassist.MainActivity">

    <LinearLayout
            android:id="@+id/menu_layout"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_width="200dp">

        <fragment
                android:id="@+id/fragment1"
                android:name="com.scltrainer.uni_mainz.sclerchenbergtrainerassist.MenuFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_width="350dp">
        <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.scltrainer.uni_mainz.sclerchenbergtrainerassist.UebungenListeFragment"
                android:id="@+id/fragment"/>
    </LinearLayout>
</RelativeLayout>
