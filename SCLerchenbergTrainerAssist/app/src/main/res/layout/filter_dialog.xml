<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton android:id="@+id/radio_fitness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fitness"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_taktik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taktik"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_technik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Technik"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_torwart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Torwart"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>
    <Spinner
        android:id="@+id/keyword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/age"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    m
    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="Gruppengröße"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taktik"/>
            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/taktik_picker"
                android:orientation="vertical">
            </NumberPicker>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Technik"
                />
            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/technik_picker"
                android:orientation="vertical">
            </NumberPicker>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Physis"/>
            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/physis_picker"
                android:orientation="vertical">
            </NumberPicker>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>