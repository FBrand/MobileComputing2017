<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: CardView darf nicht Ränder berühren -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/einheitListeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#222"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:text="Name der Übung"/>

                <RatingBar
                    android:id="@+id/einheitListeFavoriten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="1"
                    android:rating="0"
                    android:stepSize="1" />

            </LinearLayout>
            <TextView
                android:id="@+id/einheitListeAutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autor" />

            <TextView
                android:id="@+id/einheitListeZeitaufwand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zeitaufwand" />

            <TextView
                android:id="@+id/einheitListeSchlagwoerter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schlagwörter" />
            <TextView
		android:id="@+id/einheitListeSchwerpunkt"
                android:text="Schwerpunkt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
